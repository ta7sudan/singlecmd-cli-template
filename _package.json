{
  "name": "{{project}}",
  "version": "0.1.0",
  "description": "{{desc}}",
  "main": "src/index.js",
  "bin": {
    "{{cmd}}": "./bin/index.js"
  },
  "man": "./man/doc.1",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "eslint src bin test",
    "format": "prettier --config .prettierrc.js --write src/**/*.js bin/**/*.js test/**/*.js",
    "inspect": "jsinspect src bin",
    "test": "echo todo",
    "prepare": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{author}}/{{project}}.git"
  },
  "keywords": [
    {{each keywords $kwd $idx}}"{{@$kwd}}"{{if $idx != keywords.length - 1}},{{/if}}{{/each}}
  ],
  "author": "{{author}}",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/{{author}}/{{project}}/issues"
  },
  "homepage": "https://github.com/{{author}}/{{project}}#readme",
  "files": [
    "bin",
    "src",
    "man",
    "docs"
  ],
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "figlet": "^1.2.0",
		"figures": "^2.0.0",
    "ora": "^3.0.0",
    "semver": "^5.5.1",
    "yargonaut": "^1.1.4",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.14",
    "jsinspect": "^0.12.7",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  }
}
